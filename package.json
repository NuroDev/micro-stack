{
	"name": "micro-stack",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"astro": "astro",
		"build": "astro check && astro build",
		"dev": "astro dev",
		"format": "prettier --write .",
		"lint": "eslint --fix 'src/**/*.{js,ts,jsx,tsx,astro}'",
		"db:apply:local": "wrangler d1 migrations apply DATABASE --local",
		"db:apply:preview": "wrangler d1 migrations apply DATABASE --env preview",
		"db:apply:production": "wrangler d1 migrations apply DATABASE --env production",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:list:local": "wrangler d1 migrations apply DATABASE --local",
		"db:list:preview": "wrangler d1 migrations apply DATABASE --env preview",
		"db:list:production": "wrangler d1 migrations apply DATABASE --env production",
		"preview": "astro preview",
		"start": "wrangler pages dev ./dist"
	},
	"dependencies": {
		"@astrojs/check": "^0.3.4",
		"@astrojs/cloudflare": "^8.1.0",
		"@astrojs/node": "^7.0.3",
		"@astrojs/tailwind": "^5.1.0",
		"@auth/core": "^0.18.6",
		"@auth/drizzle-adapter": "^0.3.14",
		"astro": "^4.0.8",
		"clsx": "^2.1.0",
		"drizzle-orm": "^0.29.2",
		"drizzle-zod": "^0.5.1",
		"hono": "^3.12.3",
		"sharp": "^0.33.1",
		"tailwind-merge": "^2.2.0",
		"tailwindcss": "^3.4.0",
		"typescript": "^5.3.3",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/better-sqlite3": "^7.6.8",
		"@typescript-eslint/parser": "^6.18.1",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.20.12",
		"eslint": "^8.56.0",
		"eslint-plugin-astro": "^0.31.0",
		"prettier": "^3.2.2",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.12.3",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"wrangler": "^3.22.5"
	}
}
